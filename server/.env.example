# ==========================
# Server & App Configuration
# ==========================
PORT=3000                       # Server port
HISTORY_MAX=2000                # Max bars/history per symbol
WATCH_SYMBOLS=                  # Optional: override pairs (comma-separated)

# ==========================
# Quotex / Broker Credentials
# ==========================
BROKER_USERNAME=info.universefor.loop@gmail.com  # Quotex account username
BROKER_PASSWORD=mamunxD@091   # Quotex account password
BROKER_API_KEY=                  # Optional: API key if using API (else leave blank)
BROKER_API_SECRET=               # Optional: API secret if using API (else leave blank)

# ==========================
# Telegram Notification (optional)
# ==========================
ENABLE_TELEGRAM=true             # true/false
TELEGRAM_BOT_TOKEN=              # Your Telegram bot token
TELEGRAM_CHAT_ID=                # Chat ID to push signals

# ==========================
# Time & Region Configuration
# ==========================
TIMEZONE=Asia/Dhaka              # Auto time sync (BD UTC+6)
AUTO_TIME_SYNC=true              # Enable auto time sync (true/false)

# ==========================
# Advanced Features / AI / Auto Learning
# ==========================
ENABLE_AI_LEARNING=true          # true/false
ENABLE_PATTERN_ANALYSIS=true     # true/false
ENABLE_STRATEGY_ADVANCED=true   # true/false
ENABLE_MANIPULATION_DETECTOR=true
ENABLE_UI_ENHANCER=true

# ==========================
# Logging & Debug
# ==========================
LOG_LEVEL=info                   # debug/info/warn/error
ENABLE_SIMULATION=false          # true to simulate ticks for missing feeds
